package com.example.demo;

public class StackOperation {
	Scanner sc=new Scanner(System.in);
	System.out.println("enter the size of the stack");
	int size=sc.nextInt();
	int stack[]=new int[size];
	int top=-1;
	System.out.println("stack operations");
	while(true) {
		System.out.println("enter your choice 1.push 2.pop 3.display 4.exit");
		int choice=sc.nextInt();
		switch(choice) {
		case 1:if(top==size-1) {
			System.out.println("stack is full no more insertion");
		}
		else {
			System.out.println("eneter the element");
			int ele=sc.nextInt();
			top=top+1;
			stack[top]=ele;
		}
		break;
		case 2:if(top==-1) {
			System.out.println("stack is already empty no more deletions");
		}
		else {
			top=top-1;
			break;
		}
		case 3:if(top==-1) {
			System.out.println("stack is already empty no more deletions");
		}
		else {
			for(int i=top;i>=0;i--) {
				System.out.println(stack[i]);
				
			}
		}
		break;
		case 4:System.exit(0);
		break;
		default:System.out.println("check the option and retry");
		break;
		}
	}
	

}
